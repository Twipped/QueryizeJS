{
  "name": "queryize",
  "version": "2.0.0",
  "description": "A no-frills chainable/fluent interface for constructing mutable MySQL queries with data binding/escapement.",
  "main": "lib/queryize.js",
  "engines": {
    "node": ">=4.2"
  },
  "scripts": {
    "test": "tap tests/unit",
    "test:unit": "tap tests/unit",
    "test:int": "tap tests/integration",
    "test:cover": "tap --coverage tests/unit",
    "test:travis": "tap --reporter=tap tests/unit",
    "lint": "eslint ./",
    "docs": "node docs/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Twipped/QueryizeJS.git"
  },
  "keywords": [
    "sql",
    "mysql",
    "query",
    "query-builder",
    "parameter"
  ],
  "author": "Jocelyn Badgley <joc@twipped.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Twipped/QueryizeJS/issues"
  },
  "homepage": "http://queryizejs.com/",
  "devDependencies": {
    "commonmark": "^0.28.0",
    "dox": "^0.9.0",
    "eslint": "~4.12.0",
    "handlebars": "^4.0.5",
    "mktmpio": "~1.0.0-9",
    "mysql": "*",
    "mysql2": "*",
    "tap": "^11.0.0"
  },
  "dependencies": {
    "bluebird": "~3.5.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.mapvalues": "^4.5.0",
    "proxmis": "^1.0.0",
    "sqlstring": "~2.2.0"
  },
  "files": [
    "lib",
    "History.md",
    "LICENSE.txt",
    "queryize.js",
    "docs/index.html",
    "docs/fonts.css",
    "docs/fonts",
    "tests"
  ],
  "nyc": {
    "exclude": [
      "tests"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
